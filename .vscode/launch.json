    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Jest Current File",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/.bin/jest",
            "args": [
                "-i",
                "--watch",
                "${file}"
            ],
            "sourceMaps": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/$PWD/rn-cli.config.js",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}