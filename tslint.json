{
    "defaultSeverity": "error",
    "extends": [
        "tslint:latest",
        "tslint-config-airbnb",
        "tslint-eslint-rules",
        "tslint-react",
        "tslint-config-prettier"
    ],
    "rules": {
        "prettier": true,
        "quotemark": [
            true,
            "double",
            "jsx-double"
        ],
        "import-name": false,
        // This rule is here for now because of https://github.com/palantir/tslint-react/issues/120
        "variable-name": [
            true,
            "ban-keywords",
            "check-format",
            "allow-pascal-case"
        ]
    },
    "linterOptions": {
        "exclude": [
            "src/typings.d.ts"
        ]
    },
    "rulesDirectory": [
        "tslint-plugin-prettier"
    ]
}