{
  "name": "my-morning-coffee",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start-servers": "concurrently --kill-others 'yarn start-packager' 'yarn start-storybook'",
    "start-packager": "env REACT_DEBUGGER=\"$([ -d '/Applications/React Native Debugger.app' ] && echo \"open 'rndebugger://set-debugger-loc?host=localhost&port=8081' --args\")\" yarn start",
    "start-packager:e2e": "cross-env ENVFILE=.env.e2e env REACT_DEBUGGER=\"$([ -d '/Applications/React Native Debugger.app' ] && echo \"open 'rndebugger://set-debugger-loc?host=localhost&port=8081' --args\")\" yarn start",
    "start": "node node_modules/react-native/local-cli/cli.js start --config $PWD/rn-cli.config.js",
    "ios": "node node_modules/react-native/local-cli/cli.js run-ios",
    "open-sim": "open -a Simulator",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "concurrently --kill-others 'detox test --configuration ios.sim.debug --platform ios --reuse' 'yarn json-server'",
    "test:e2e:build": "detox build -c ios.sim.debug",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "lint:fix": "tslint -c tslint.json -p tsconfig.json --fix",
    "start-storybook": "storybook start -p 7007 --skip-packager",
    "storybook": "storybook start -p 7007",
    "prestorybook": "rnstl",
    "json-server": "json-server --watch ./e2e/json-server/db.json --static ./e2e/json-server/static",
    "prepare": "patch-package"
  },
  "dependencies": {
    "axios": "0.18.0",
    "mobx": "4.3.0",
    "mobx-react": "5.1.2",
    "mobx-state-tree": "2.0.5",
    "mst-middlewares": "2.0.5",
    "react": "16.3.2",
    "react-native": "0.55.4",
    "react-native-config": "^0.11.5",
    "react-native-navigation": "2.0.2295",
    "react-native-paper": "1.9.1",
    "react-native-vector-icons": "4.6.0",
    "timeago.js": "3.0.2"
  },
  "devDependencies": {
    "@storybook/react-native": "3.4.6",
    "@types/faker": "4.1.2",
    "@types/jest": "22.2.3",
    "@types/nock": "9.1.3",
    "@types/react": "16.3.14",
    "@types/react-native": "0.55.16",
    "@types/react-test-renderer": "16.0.1",
    "@types/storybook__react": "3.0.7",
    "babel-jest": "23.0.1",
    "babel-preset-react-native": "4.0.0",
    "concurrently": "3.5.1",
    "cross-env": "5.1.6",
    "detox": "7.3.7",
    "eslint": "4.19.1",
    "faker": "4.1.0",
    "jest": "23.1.0",
    "json-server": "0.13.0",
    "nock": "9.3.0",
    "patch-package": "^5.1.1",
    "postinstall-prepare": "^1.0.1",
    "prettier": "1.13.3",
    "react-dom": "16.3.2",
    "react-native-storybook-loader": "1.8.0",
    "react-native-typescript-transformer": "1.2.9",
    "react-test-renderer": "16.3.2",
    "remotedev": "0.2.7",
    "ts-jest": "22.4.6",
    "tslint": "5.10.0",
    "tslint-config-airbnb": "5.9.2",
    "tslint-config-prettier": "1.13.0",
    "tslint-eslint-rules": "5.3.1",
    "tslint-plugin-prettier": "1.3.0",
    "tslint-react": "3.6.0",
    "typescript": "2.9.1"
  },
  "jest": {
    "preset": "react-native",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "/src/((\\S*/)?__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "modulePaths": [
      "<rootDir>"
    ],
    "globals": {
      "ts-jest": {
        "useBabelrc": true
      }
    }
  },
  "config": {
    "react-native-storybook-loader": {
      "searchDir": [
        "./src"
      ],
      "pattern": "**/*.stories.tsx",
      "outputFile": "./storybook/storyLoader.js"
    }
  },
  "rnpm": {
    "assets": [
      "./assets/fonts"
    ]
  },
  "detox": {
    "test-runner": "jest",
    "specs": "e2e",
    "runner-config": "e2e/config.json",
    "configurations": {
      "ios.sim.debug": {
        "binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/MyMorningCoffee.app",
        "build": "cross-env ENVFILE=.env.e2e xcodebuild -project ios/MyMorningCoffee.xcodeproj -scheme MyMorningCoffee -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build",
        "type": "ios.simulator",
        "name": "iPhone 6"
      }
    }
  }
}